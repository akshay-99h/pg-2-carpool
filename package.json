{
  "name": "carpool-pg2-monorepo",
  "private": true,
  "packageManager": "pnpm@10.6.0",
  "scripts": {
    "build": "pnpm -r --if-present build",
    "dev": "pnpm --filter @carpool/web dev",
    "dev:mobile": "pnpm --filter @carpool/mobile dev",
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "format": "pnpm exec biome format . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.3"
  }
}
